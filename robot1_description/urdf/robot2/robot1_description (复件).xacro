	name="robot1_xacro">

    <xacro:include filename="$(find robot1_description)/urdf/sensors/VLP-16.urdf.xacro" />
    <!-- PROPERTY LIST -->
    <xacro:property name="M_PI" value="3.1415926"/>

    <xacro:property name="chassisHeight" value="1.6"/><!-- chassis is base_link box -->
    <xacro:property name="chassisLength" value="0.9"/>
    <xacro:property name="chassisWidth" value="0.7"/>
    <xacro:property name="chassisMass" value="16"/>

    <xacro:property name="wheel_rf" value="0.23"/><!-- r is radius -->
    <xacro:property name="wheel_hf" value="0.06"/><!-- h is thickness -->
    <xacro:property name="wheel_mf" value="0.1"/><!-- m is mass -->
    <xacro:property name="wheel_separation" value="0.65"/>

    <!-- <xacro:property name="wheel_rb" value="0.23"/>
    <xacro:property name="wheel_hb" value="0.06"/>
    <xacro:property name="wheel_mb" value="0.1"/> -->
